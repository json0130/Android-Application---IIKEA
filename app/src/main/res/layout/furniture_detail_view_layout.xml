<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start">

        <LinearLayout
            android:id="@+id/clothing_item_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/baseline_add_24"
                    />
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:transitionName="clothingItemImage"
                    android:id="@+id/furniture_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:paddingHorizontal="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginBottom="16dp"
                    />

                <LinearLayout
                    android:id="@+id/clothing_item_dots_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="6dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:baselineAligned="false">

                    <TextView
                        android:id="@+id/clothing_item_dot_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="&#8226;"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/clothing_item_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="&#8226;"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/furniture_item_price_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/furniture_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="GAMING CHAIR"
                    android:textAllCaps="true"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/clothing_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="16dp"
                    android:text="$ 99.99"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/clothing_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clothing_item_price"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="16dp"
                    android:text="1 + 2"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/furniture_item_title"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="16dp"
                    android:src="@drawable/baseline_add_24"
                    />

            </RelativeLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                />

            <TextView
                android:id="@+id/clothing_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="2"
                android:text="HELLO" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clothing_item_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right|end"
        android:layout_marginHorizontal="16dp"
        android:translationY="-20dp"
        android:contentDescription="Add to Cart"
        android:src="@drawable/baseline_add_24"
        app:layout_anchor="@id/fragment_container_view"
        app:layout_anchorGravity="top|right|end" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        app:layout_anchorGravity="bottom|start"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>


